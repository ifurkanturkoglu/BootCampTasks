@model Employee


<form asp-action="AddEmployee">
    <label>First name</label>
    <div class="form-group">
        <input asp-for="FirstName" />
    </div>
    <label>Last name</label>
    <div class="form-group">
        <input asp-for="LastName" />
    </div>
    <label>Title</label>
    <div class="form-group">
        <input asp-for="Title" />
    </div>
    <button type="submit">Create</button>
</form>